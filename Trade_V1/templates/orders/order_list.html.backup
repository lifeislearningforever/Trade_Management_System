{% extends 'base_with_sidebar.html' %}

{% block title %}Orders - Trade Management{% endblock %}

{% block sidebar %}
<!-- Filter Form -->
<form method="get" action="{% url 'order_list' %}">
    {{ filter_form.as_p }}
    <button type="submit" class="btn btn-primary btn-sm w-100 mt-2">
        <i class="bi bi-funnel"></i> Apply Filters
    </button>
    <a href="{% url 'order_list' %}" class="btn btn-secondary btn-sm w-100 mt-2">
        <i class="bi bi-x-circle"></i> Clear Filters
    </a>
</form>
{% endblock %}

{% block main_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-file-earmark-text"></i> Orders</h2>
    <a href="{% url 'order_create' %}" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Create Order
    </a>
</div>

{% if page_obj %}
<div class="card">
    <div class="card-header">
        <i class="bi bi-list"></i> Order List ({{ total_count }} total)
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Order ID</th>
                        <th>Stock</th>
                        <th>Side</th>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Created By</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in page_obj %}
                    <tr>
                        <td><strong>{{ order.order_id }}</strong></td>
                        <td>{{ order.stock.symbol }}</td>
                        <td>
                            {% if order.side == 'BUY' %}
                            <span class="badge bg-success">{{ order.get_side_display }}</span>
                            {% else %}
                            <span class="badge bg-danger">{{ order.get_side_display }}</span>
                            {% endif %}
                        </td>
                        <td>{{ order.get_order_type_display }}</td>
                        <td>{{ order.quantity }}</td>
                        <td>{{ order.price|default:"Market" }}</td>
                        <td>{% include 'includes/status_badge.html' with status=order.status %}</td>
                        <td>{{ order.created_by_name }}</td>
                        <td>{{ order.created_at|date:"Y-m-d H:i" }}</td>
                        <td>
                            <a href="{% url 'order_detail' order.pk %}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Pagination -->
<div class="mt-3">
    {% include 'includes/pagination_simple.html' %}
</div>

{% else %}
<div class="alert alert-info">
    <i class="bi bi-info-circle"></i> No orders found. <a href="{% url 'order_create' %}">Create your first order</a>
</div>
{% endif %}
{% endblock %}
